<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile=".\internal_logs\internallog.txt">

  <extensions>
    <add assembly="UserNameLayoutRenderer" />
    <add assembly="RandomPlusNumberLayoutRenderer" />
    <add assembly="RandomNumbersLayoutRenderer" />
  </extensions>
  
  
  <targets>
    <target name="logfile" xsi:type="File"
				fileName=".\logs\${shortdate}_logfile.txt"
				layout="${longdate} ${level:uppercase=true} ${message}"/>

    <target name="SansTopuLogs" xsi:type="Database">
      <connectionString>
        Data Source = DESKTOP-HNE46F7; Initial Catalog=LottoDB; Integrated Security=true; TrustServerCertificate=True;
      </connectionString>
      <commandText>
        INSERT INTO SansTopuLogs (UserName, RandomPlusNumber, RandomNumbers) VALUES
        (@userName, @randomPlusNumber, @randomNumbers)
      </commandText>
      <parameter name="@userName" layout="${userName}" />
      <parameter name="@randomPlusNumber" layout="${randomPlusNumber}" />
      <parameter name="@randomNumbers" layout="${randomNumbers}" />
    </target>
    
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="logfile" />
    <logger name="*" minlevel="Debug" writeTo="SansTopuLogs" />
  </rules>
</nlog>