<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile=".\internal_logs\internallog.txt">

  <targets>
    <target name="logfile" xsi:type="File"
				fileName=".\logs\${shortdate}_logfile.txt"
				layout="${longdate} ${level:uppercase=true} ${message}"/>

    <target name="database" xsi:type="Database">
      <connectionString>
        <add name="LotocumDb" connectionString="Data Source= DESKTOP-HNE46F7; Initial Catalog = LottoDB; Integrated Security=true; TrustServerCertificate=True;" providerName="System.Data.SqlClient" />
      </connectionString>
      <commandText>
        INSERT INTO SansTopuLogs (User, RandomPlusNumber, RandomNumbers) VALUES
        (@user, @randomPlusNumber, @randomNumbers)
      </commandText>
      <parameter name="@user" layout="${user}" />
      <parameter name="@randomPlusNumber" layout="${randomPlusNumber}" />
      <parameter name="@randomNumbers" layout="${randomNumbers}" />
    </target>
    
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="logfile" />
    <logger name="*" minlevel="Debug" writeTo="database" />
  </rules>
</nlog>